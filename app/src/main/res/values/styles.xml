<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorIcons</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorIcons</item>
    </style>

    <style name="FormTextFieldWrapper">
        <item name="android:background">@drawable/text_field_wrapper</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="FormTextField">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:background">@drawable/login_button_selector</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:stateListAnimator">@animator/main_button_elevation</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MainButtonTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MainButtonSubtext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="MainToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/Theme.AppCompat.NoActionBar</item>
    </style>

    <style name="DeviceManagerButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/main_button_selector</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">@color/colorErrorLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
